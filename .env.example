# LLM Configuration
# Provider selection: groq, gemini, perplexity
LLM_PROVIDER=groq

# Groq Configuration
# API Key: https://console.groq.com/keys
# Models: llama-3.1-70b-versatile, llama-3.1-8b-instant, mixtral-8x7b-32768
GROQ_API_KEY=your_groq_api_key_here
GROQ_MODEL=llama-3.1-70b-versatile

# Gemini Configuration
# API Key: https://ai.google.dev/
# Models: gemini-1.5-pro, gemini-1.5-flash, gemini-pro
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-1.5-pro

# Perplexity Configuration
# API Key: https://www.perplexity.ai/
# Models: llama-2-70b-chat, mistral-7b-instruct, sonar-small-chat
PERPLEXITY_API_KEY=your_perplexity_api_key_here
PERPLEXITY_MODEL=llama-2-70b-chat

# LLM Common Settings
LLM_TEMPERATURE=0.1
LLM_MAX_TOKENS=8192
LLM_TIMEOUT=60

# Neo4j Configuration
NEO4J_URI=bolt://neo4j:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=password
NEO4J_AUTH=neo4j/password

# Neo4j Ports (for external access)
NEO4J_HTTP_PORT=7474
NEO4J_BOLT_PORT=7687

# API Configuration
API_HOST=0.0.0.0
API_PORT=3301

# Logging
LOG_LEVEL=INFO
